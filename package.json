{
  "name": "@tfohrer/mafeah",
  "version": "0.0.1",
  "private": true,
  "homepage": "https://github.com/tfohrer/wp-theme-mafeah",
  "license": "MIT",
  "author": "TFohrer",
  "scripts": {
    "bootstrap": "wpackio-scripts bootstrap",
    "build": "wpackio-scripts build",
    "start": "webpack --mode development --watch",
    "archive": "wpackio-scripts build && wpackio-scripts pack",
    "lint": "yarn run lint-js && yarn run lint-css",
    "lint-js": "eslint assets --ext .js,.ts --no-error-on-unmatched-pattern",
    "lint-css": "stylelint \"assets/**/*.{css,less,sass,scss}\" --allow-empty-input",
    "storybook": "start-storybook",
    "build:storybook": "build-storybook -o storybook-docs",
    "build:tailwind": "postcss assets/sass/app.scss -o assets/sass/tailwind.scss",
    "stylelint-check": "stylelint-config-prettier-check"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint",
      "prettier"
    ],
    "*.{css,less,sass,scss}": "stylelint"
  },
  "devDependencies": {
    "@babel/cli": "^7.11.6",
    "@babel/core": "^7.11.6",
    "@babel/preset-env": "^7.11.5",
    "@storybook/addon-controls": "^6.1.21",
    "@storybook/addon-essentials": "^6.1.21",
    "@storybook/addon-knobs": "^6.1.21",
    "@storybook/html": "^6.1.21",
    "@storybook/preset-scss": "^1.0.3",
    "@tailwindcss/forms": "^0.2.1",
    "@tailwindcss/typography": "^0.3.1",
    "@wordpress/prettier-config": "^1.0.1",
    "autoprefixer": "^10.0.0",
    "babel-core": "^7.0.0-bridge.0",
    "browser-sync": "^2.26.12",
    "browser-sync-webpack-plugin": "^2.2.2",
    "css-loader": "^4.3.0",
    "eslint": "^7.11.0",
    "file-loader": "^6.1.0",
    "husky": "^4.3.0",
    "lint-staged": "^10.5.2",
    "mini-css-extract-plugin": "^0.11.2",
    "node-sass": "^4.14.1",
    "postcss": "^7.0.35",
    "prettier": "^2.1.2",
    "sass": "^1.27.0",
    "sass-loader": "^10.0.2",
    "stylelint": "^13.7.2",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-scss": "^3.18.0",
    "tailwindcss": "npm:@tailwindcss/postcss7-compat@^2.0.1",
    "twig": "^1.15.4",
    "twig-loader": "^0.5.5",
    "url-loader": "^4.1.0",
    "webpack": "^5.30.0",
    "webpack-cli": "^4.6.0",
    "webpack-manifest-plugin": "^3.1.1",
    "webpack-nano": "^1.1.1"
  }
}
