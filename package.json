{
	"name": "@tfohrer/mafeah",
	"version": "0.0.1",
	"private": true,
	"homepage": "https://github.com/tfohrer/wp-theme-mafeah",
	"license": "MIT",
	"author": "TFohrer",
	"scripts": {
		"clean": "rimraf dist",
		"build": "npm run clean && webpack --mode development",
		"build:prod": "npm run clean && NODE_ENV=production webpack --mode production",
		"start": "webpack --mode development --watch",
		"lint": "yarn run lint-js && yarn run lint-css",
		"lint-js": "eslint assets --ext .js,.ts --no-error-on-unmatched-pattern",
		"lint-css": "stylelint \"assets/**/*.{css,less,sass,scss}\" --allow-empty-input",
		"storybook": "start-storybook",
		"build:storybook": "build-storybook -o storybook-docs",
		"build:tailwind": "postcss assets/sass/app.scss -o assets/sass/tailwind.scss",
		"stylelint-check": "stylelint-config-prettier-check"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"*.{js,ts}": [
			"eslint",
			"prettier"
		],
		"*.{css,less,sass,scss}": "stylelint"
	},
	"devDependencies": {
		"@babel/cli": "^7.11.6",
		"@babel/core": "^7.13.14",
		"@babel/preset-env": "^7.13.12",
		"@storybook/addon-controls": "^6.2.2",
		"@storybook/addon-essentials": "^6.2.2",
		"@storybook/addon-knobs": "^6.2.2",
		"@storybook/html": "^6.2.2",
		"@storybook/preset-scss": "^1.0.3",
		"@tailwindcss/forms": "^0.2.1",
		"@tailwindcss/typography": "^0.3.1",
		"@wordpress/prettier-config": "^1.0.1",
		"autoprefixer": "^10.2.5",
		"babel-core": "^7.0.0-bridge.0",
		"browser-sync": "^2.26.14",
		"browser-sync-webpack-plugin": "^2.2.2",
		"css-loader": "^5.2.0",
		"eslint": "^7.23.0",
		"file-loader": "^6.1.0",
		"husky": "^4.3.8",
		"lint-staged": "^10.5.4",
		"mini-css-extract-plugin": "^0.11.2",
		"node-sass": "^4.14.1",
		"postcss": "^8.2.9",
		"prettier": "^2.2.1",
		"rimraf": "^3.0.2",
		"sass": "^1.32.8",
		"sass-loader": "^10.0.2",
		"stylelint": "^13.12.0",
		"stylelint-config-prettier": "^8.0.2",
		"stylelint-config-standard": "^20.0.0",
		"stylelint-scss": "^3.19.0",
		"tailwindcss": "^2.0.4",
		"twig": "^1.15.4",
		"twig-loader": "^0.5.5",
		"url-loader": "^4.1.0",
		"webpack": "^5.30.0",
		"webpack-cli": "^4.6.0",
		"webpack-manifest-plugin": "^3.1.1"
	},
	"dependencies": {}
}
